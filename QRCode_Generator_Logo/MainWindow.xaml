<Window x:Class="QRCode_Generator_Logo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QRCode_Generator_Logo"
                xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"

        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0" Text="{Binding text_input, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 TextWrapping="Wrap"/>

        <Grid Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Source="{Binding bitmapsource, UpdateSourceTrigger=PropertyChanged}" 
               Stretch="Uniform" MaxHeight="512" RenderOptions.BitmapScalingMode="Fant" />
            <Image Grid.Column="1" Source="{Binding bitmapsource2, UpdateSourceTrigger=PropertyChanged}" 
               Stretch="Uniform" MaxHeight="512" RenderOptions.BitmapScalingMode="Fant" />

            <Grid Grid.Column="2" Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Vertical" >


                    <xctk:ColorPicker SelectedColor="{Binding color_1}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="50"/>
                    <xctk:ColorPicker SelectedColor="{Binding color_2}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="50"/>
                </StackPanel>

                <Button Grid.Row="3" Content="Save" Height="50" Width="80" Click="Button_Click"/>
            </Grid>

        </Grid>

        <TextBlock Grid.Row="2" Text="{Binding text_output, UpdateSourceTrigger=PropertyChanged}"
                   x:Name="_tbk_output" TextWrapping="Wrap"/>

    </Grid>
</Window>
